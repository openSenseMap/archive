doctype html
html
  head
    meta(http-equiv='Content-Type' content="text/html" charset='utf-8')
    title Index.of archive.opensensemap.org/#{date}/#{deviceName}
    link(href="../../style.css" rel="stylesheet")
  body
    h1 Index of archive.opensensenmap.org/#{date}/#{deviceName}
    table(border="0" cellspacing="0" cellpadding="0")
      tbody
        tr
          th Name
          th Last modified
          th Size
        tr
          th(colspan="3")
            hr
        tr
          td.
            #[a(href='../') ../]
          td &#160;
          td &#160;
        each content in contents
          tr
            td.
              #[a(href='https://uni-muenster.sciebo.de/index.php/s/HyTbguBP4EkqBcp/download?path=/data/'+ date +'/'+ deviceName + '/' + content.basename) #{content.basename}]
            td= dayjs(content.lastmod).format('DD-MMM-YYYY hh:mm:ss')
            td #{content.size}
